{
  "name": "curso-cypress",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "clean:reports": "rimraf cypress/reports && node -e \"require('fs').mkdirSync('cypress/reports/.jsons', { recursive: true })\"",
    "pretest": "npm run clean:reports",
    "combine-reports": "npx mochawesome-merge cypress/reports/.jsons/*.json > cypress/reports/mochawesome.json",
     "generate-report": "npx marge ./cypress/reports/mochawesome.json --reportDir ./cypress/reports --reportFilename mochawesome --inline",    "posttest": "npm run combine-reports && npm run generate-report",
    "open-report": "start cypress\\reports\\mochawesome.html",
    "test:full": "npm run clean:reports && npm run test && npm run combine-reports && npm run generate-report && npm run open-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "cypress": "^14.5.0",
    "cypress-xpath": "^2.0.1",
    "mysql2": "^3.14.3",
    "sardine": "^0.6.4"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^23.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.5",
    "cypress-file-upload": "^5.0.8",
    "cypress-mochawesome-reporter": "^4.0.2",
    "digest-fetch": "^3.1.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "rimraf": "^6.0.1",
    "webdav": "^5.8.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/cucumber-json",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  }
}
